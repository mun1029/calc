<% @user ||= current_user %>
<div class="stats">
  <div class='followings'>
    <strong id="following" class="stat">
      <%= @user.followings.count %>
    </strong>
    <%=link_to 'フォロー', following_user_path(@user), class: 'link' %>
  </div>
  <div class='followers'>
      <strong id="followers" class="stat">
        <%= @user.followers.count %>
      </strong>
      <%= link_to 'フォロワー', followers_user_path(@user), class: 'link' %>
  </div>
</div>