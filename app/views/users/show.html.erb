<%= render "shared/second-header" %>
<div class='contents'>
  <div class='user-info'>
   <div class='image-rap'>
      <%= image_tag current_user.image.variant(resize: '280x280'), class: 'hidden' if current_user.image.attached? %>
    </div>
    <div class='user-rap'>
      <p><span class='info'>ユーザー名 :</span> <%= current_user.nickname %></p>
      <p><span class='info'>年齢 :</span> <%= current_user.age %></p>
      <p><span class='info'>性別 :</span> <%= current_user.gender %></p>
    </div>
  </div>
  <div class="rooms">
    <p> ルーム一覧 </p>
    <% current_user.rooms.each do |room| %>
      <div class="room">
          <%= link_to room.name, room_path(room.id), class: "link" %>
      </div>
    <% end %>
  </div>
  <div class="lists">
    <p>リスト一覧</P>
    <% current_user.lists.each do |list| %>
      <div class="list">
          <%= link_to list.list_name, list_path(list.id) %>
      </div>
    <% end %>
  </div>
</div>
