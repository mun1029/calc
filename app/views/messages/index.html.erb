<div class="wrapper">
    <div class='side-bar' >
      <%= render "side_bar" %>
  </div>
  <div class= "chat">
    <div class= "main-content">
      <%= render "main_chat" %>
    </div> 
    <div class="form-content">
      <%= form_with model: [@room, @message], class:'form', id: "new_message" do |f| %>
        <label class="form-image">
          <%= f.file_field :image, class: 'hidden' %>
        </label>
        <div class="form-input">
          <%= f.text_field :content, class: 'form-message', placeholder: 'メッセージ' %>
          <%= hidden_field_tag :content, current_user.nickname %>
        </div>
        <%= f.submit '送信', class: 'form-submit' %>
        <% end %>
    </div>
  </div>
</div>
