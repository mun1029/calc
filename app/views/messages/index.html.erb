<div class="wrapper">
  <div class= "chat">
    <div class="menu-bar">
      <%= image_tag "pin.png", :size =>'50x50', class:'menu-btn', id: 'menu-btn' %>
        <div class='side-content' id='side-content' >
          <%= render "side_bar" %>
        </div>
    </div>
    <div class= "main-content">
      <%= render "main_chat" %>
    </div> 
  </div>
  <div class="form-content">
    <%= form_with model: [@room,@message], class:'form' do |f| %>
      <label class="form-image">
        <%= f.file_field :image, class: 'hidden' %>
      </label>
      <div class="form-input">
        <%= f.text_field :content, class: 'form-message', placeholder: 'メッセージ' %>
      </div>
      <input class="form-submit" type="submit" value="送信">
    <% end %>
  </div>
</div>
