<%= stylesheet_link_tag "devise/signup", :media => "all" %>
<%= render "shared/header" %>
<div class='wrappe'>
  <div class='sign-up-form'>
    <h2>新規登録</h2>
    <%= render "devise/shared/error_messages", resource: @user %>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <div class='first-group' id='first-group'>
        <div class="form-group">
          <div class="form-text-rap">
            <label class=form-text>メールアドレス</label>
            <span class="indispensable">(必須)</span>
          </div>
          <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", class: 'new-form' %>
        </div>
        <div class="form-group">
          <div class="form-text-rap">
            <label class=form-text>パスワード</label>
            <span class="indispensable">(必須)</span>
          </div>
          <%= f.password_field :password, placeholder:"6文字以上の半角英数字", class: 'new-form' %>
        </div>
        <div class="form-group">
          <div class="form-text-rap">
            <label class=form-text>パスワード確認</label>
            <span class="indispensable">(必須)</span>
          </div>
          <%= f.password_field :password_confirmation, placeholder:"6文字以上の半角英数字", class: 'new-form' %>
        </div>
        <div class='actions'>
          <input type='button' value='NEXT' class='next-btn' id='next-btn'>
        </div>
      </div>

      <div class='second-group' id='second-group'>

        <div class="field-group">
          <div class="form-text-rap">
            <label class=form-text>プロフィール画像</label>
            <span class="indispensable">(任意)</span>
          </div>
          <label class='form-image-rap'>
            画像を選択
            <%= f.file_field :image, class: 'image-rap' %>
          </label>
        </div>

        <div class="form-group">
          <div class="form-text-rap">
            <label class=form-text>ニックネーム</label>
            <span class="indispensable">(必須)</span>
          </div>
          <%= f.text_field :nickname, placeholder:"nickname", class: 'new-form' %>
        </div>

        <div class="form-group">
          <div class="form-text-rap">
            <label class=form-text>年齢</label>
            <span class="indispensable">(任意)</span>
          </div>
          <%= f.text_field :age, value: '非公開', class: 'new-form' %>
        </div>

        <div class="form-group">
          <div class="form-text-rap">
            <label class=form-text>性別</label>
          </div>
          <label class='gender-form'>
            <%= f.select :gender, [["非公開"],["男性"],["女性"]], include_blank: "選択して下さい" %>
          </label>
        </div>

        <div class="actions">
          <input type='button' value='戻る' class='new-btn' id='back-btn'>
          <%= f.submit "登録する", class: 'new-btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
